<style>
.chat_wrap{
    background-color:#FFF3F0; 
    border:1px solid #999;
    width:300px; padding:5px; 
    font-size:13px; 
    color:#ddd;
    border-radius: 2%;
}
.chat_wrap .inner{
    background-color:#FFF3F0; 
    border-radius:5px; 
    padding:10px; 
    overflow-y:scroll;height: 
    400px;
}
.chat_wrap .item{
    margin-top:15px
}
.chat_wrap .item:first-child{
    margin-top:0px
}
.chat_wrap .item .box{
    display:inline-block; 
    max-width:180px; 
    position:relative
}
.chat_wrap .item .box::before{
    content:""; 
    position:absolute; 
    left:-8px; top:9px; 
    border-top:0px solid transparent; 
    border-bottom:8px solid transparent;
    border-right:8px solid #634F47;
}
.chat_wrap .item .box .msg {
    background:#634F47; 
    border-radius:10px; 
    padding:8px; 
    text-align:left
}
<!--대화 알-->
.chat_wrap .item .box .time {
    font-size:11px; 
    color:#634F47; 
    position:absolute; right: -75px; 
    bottom:5px; 
    width:70px
}
.chat_wrap .item.mymsg{
    text-align:right
}
.chat_wrap .item.mymsg .box::before{
    left:auto; 
    right:-8px; 
    border-left:8px solid #634F47;
    border-right:0;
}
.chat_wrap .item.mymsg .box .msg{
    background:#634F47;
}
.chat_wrap .item.mymsg .box .time{
    right:auto; 
    left:-75px
}
.chat_wrap .item .box{
    transition:all .3s ease-out; 
    margin:0 0 0 20px;
    opacity:0
}
.chat_wrap .item.mymsg .box{
    transition:all .3s ease-out;
    margin:0 20px 0 0;
}
.chat_wrap .item.on .box{
    margin:0; 
    opacity: 1;
}
input.mymsg{
    color: #ddd;
}
input.yourmsg{
    color: #ddd;
}
div.inner{
    color: #ddd;
}
span.time{
    color: #634F47
}
input[type="text"]{
    border:0; 
    width:100%;
    background:#634F47; 
    border-radius:5px; 
    height:30px; 
    padding-left:5px; 
    box-sizing:border-box; 
    margin-top:5px
}
input[type="text"]::placeholder{ 
    color:#634F47;
}
div.inner::-webkit-scrollbar{
                width: 20px; 
            }
div.inner::-webkit-scrollbar-thumb{
    background-color: #634F47;
    border-radius: 10px;
    background-clip: padding-box;
    border: 2px solid transparent;
}
div.inner::-webkit-scrollbar-track {
    border-radius: 10px;
    box-shadow: inset 0px 0px 5px;
}
p{
    margin-bottom: 5px;
}
.chating_box{
    padding-left: 40%;
}
</style>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<div class="chating_box">
    <input type="hidden" value="@User.FindFirst("userid").Value", id="myid" readonly/>
    <input type="hidden" value="@ViewData["target"]", id="targetid" readonly/>
    <div class="chat_wrap">
        <div class="inner"></div>
        <input type="text" class="mymsg" placeholder="내용 입력">
    </div>
</div>
